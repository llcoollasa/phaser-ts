{
	"name": "coolant",
	"version": "1.0.0",
	"description": "Phaser 3 project",
	"scripts": {
		"postbuild": "cp -R ./public/* ./dist",
		"start": "parcel src/index.html -p 8000",
		"build": "parcel build src/index.html --dist-dir dist",
		"lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
	},
	"author": "llcoollasa",
	"license": "Copyright 2022",
	"devDependencies": {
		"@types/node": "^17.0.21",
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"eslint": "^6.8.0",
		"minimist": ">=1.2.2",
		"parcel-plugin-clean-easy": "^1.0.2",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"parcel": "^2.3.2",
		"phaser": "^3.55.2"
	},
	"parcelCleanPaths": [
		"dist"
	],
	"staticFiles": {
		"staticPath": "public",
		"watcherGlob": "**"
	}
}
